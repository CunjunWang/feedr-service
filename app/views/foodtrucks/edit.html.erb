<section id="login" class="bg-light py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h4>Edit Foodtruck</h4>
          </div>
          <div class="card-body">
            <%= form_with(model: @foodtruck, local: true) do |form| %>
              <% if @foodtruck.errors.any? %>
                <div id="error_explanation">
                  <% @foodtruck.errors.full_messages.each do |msg| %>
                    <div class="alert alert-danger" role="alert"><%= msg %></div>
                  <% end %>
                </div>
              <% end %>
              <div class="form-group">
                <%= form.label :Name %>
                <%= form.text_field :Name, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.label :Type %><br>
                <%= form.select :Type, ['American', 'Chinese', 'Korean', 'Japanese', 'Halal', 'Mongolian'], class: 'form-control' %>
              </div>
              <div class="form-group">

                <%= form.label :Address %>
                <%= form.text_area :Address, class: 'form-control' %>
              </div>
              <div class="form-group">

                <%= form.label :Description %>
                <%= form.text_area :Description, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.label :Owner %>
                <%= form.text_field :Owner, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.label "Cover" %>
                <%= form.file_field :cover %>
              </div>

              <%= form.submit 'Save', class: "btn btn-secondary btn-block" %>
            <% end %>
            <%= link_to 'Back to Foodtruck', foodtruck_path(@foodtruck) %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <%= render 'menuitems/form' %>
      </div>
    </div>
  </div>
  </div>
</section>